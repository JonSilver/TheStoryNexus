{
    "name": "thestorynexus",
    "displayName": "The Story Nexus",
    "description": "A story writing app powered by AI.",
    "author": "Jon Silver",
    "contributors": [
        "Vijaykumar Bhattacharji"
    ],
    "private": true,
    "version": "0.8.12",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cross-env NODE_ENV=development PORT=3001 tsx watch server/index.ts",
        "dev:client": "vite",
        "build": "tsc && tsc --project server/tsconfig.json && vite build",
        "start": "cross-env NODE_ENV=production node dist/server/server/index.js",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "knip": "knip",
        "lint": "oxlint",
        "lint:fix": "oxlint --fix",
        "lint:client": "oxlint src",
        "lint:server": "oxlint server",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "dependencies": {
